!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Blaze
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    .row
      .small-12.medium-12.medium-centered.columns
        %ul.button-group.radius
          - if user_signed_in?
            %li= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "button"
            %li= link_to "My Log", user_path(current_user), class: "button"
            %li= link_to "Community Log", entries_path, class: "button"
          - else
            %li= link_to "Sign Up", new_user_registration_path, class: "button"
            %li= link_to "Sign In", new_user_session_path, class: "button"
        .row
          .small-12.medium-6.columns
            -if alert
              .alert.alert-box= alert
            -elsif notice
              .notice.alert-box.info= notice
        = yield
        = javascript_include_tag "application"
