!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Blaze Trail Log
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    #bg-image
      - unless user_signed_in?
        //%button(data-reveal-id="SignUpModal" data-reveal-ajax="users/sign_up") a button
        = link_to "Sign Up", new_user_registration_path, style: "visibility: hidden"
        = link_to "Sign In", new_user_session_path,  style: "visibility: hidden"
      - if user_signed_in?
        = link_to "Sign Out", destroy_user_session_path, method: :delete,  style: "visibility: hidden"
        = link_to "Your Log", user_path(current_user), style: "visibility: hidden"
      -# -if alert
      -#   .alert.alert-box= alert, style: "visibility: hidden"
      -# -elsif notice
      -#   .notice.alert-box.info= notice, style: "visibility: hidden"
      = yield
      = javascript_include_tag "application"
